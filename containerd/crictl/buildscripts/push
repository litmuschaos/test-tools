#!/bin/bash
set -e

IMAGEID=$( docker images -q litmuschaos/crictl )

if [ ! -z "${DNAME}" ] && [ ! -z "${DPASS}" ]; 
then 
  docker login -u "${DNAME}" -p "${DPASS}"; 
  #Push to docker hub repository with latest tag
  docker tag ${IMAGEID} litmuschaos/crictl:latest
  docker push litmuschaos/crictl:latest; 
else
  echo "No docker credentials provided. Skip uploading litmuschaos/crictl:latest to docker hub"; 
fi;
