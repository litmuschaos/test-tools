#!/bin/bash
set -e

IMAGEID=$( docker images -q openebs/tests-forkbomb )

if [ ! -z "${DNAME}" ] && [ ! -z "${DPASS}" ]; 
then 
  docker login -u "${DNAME}" -p "${DPASS}"; 
  #Push to docker hub repository with latest tag
  docker tag ${IMAGEID} openebs/tests-forkbomb:latest
  docker push openebs/tests-forkbomb:latest; 
else
  echo "No docker credentials provided. Skip uploading openebs/tests-dd:latest to docker hub"; 
fi;
