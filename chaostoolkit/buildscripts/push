#!/bin/bash
set -e

IMAGEID=$( docker images -q litmuschaos/chaostest )

if [ ! -z "${DNAME}" ] && [ ! -z "${DPASS}" ];
then
  docker login -u "${DNAME}" -p "${DPASS}";
  #Push to docker hub repository with latest tag
  docker tag ${IMAGEID} litmuschaos/chaostest:latest
  docker push litmuschaos/chaostest:latest;
else
  echo "No docker credentials provided. Skip uploading openebs/tests-chaostoolkit:latest to docker hub";
fi;
