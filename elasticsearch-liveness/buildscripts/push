#!/bin/bash
set -e

IMAGEID=$( docker images -q openebs/elasticsearch-liveness )

if [ ! -z "${DNAME}" ] && [ ! -z "${DPASS}" ]; 
then 
  docker login -u "${DNAME}" -p "${DPASS}"; 
  #Push to docker hub repository with latest tag
  docker tag ${IMAGEID} openebs/elasticsearch-liveness:latest
  docker push openebs/elasticsearch-liveness:latest; 
else
  echo "No docker credentials provided. Skip uploading openebs/elasticsearch-liveness:latest to docker hub"; 
fi;